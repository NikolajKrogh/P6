<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".activities.MainActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/inner_frame_layout_padding"
            app:layout_boxedEdges="all">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/PredictActivityButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onPredictActivityClick"
                    android:text="Predict Activity " />

                <Button
                    android:id="@+id/UpdateWithLabelsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onUpdateWithLabelsClick"
                    android:text="Update with labels" />

                <Button
                    android:id="@+id/testAccuracyButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onTestAccuracyClick"
                    android:text="Test accuracy" />

                <Button
                    android:id="@+id/collectDataButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onCollectDataClick"
                    android:text="Collect data" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <Button
                    android:id="@+id/viewModelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onViewModelClick"
                    android:text="View model" />

                <Button
                    android:id="@+id/updateModelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onUpdateModelClick"
                    android:text="Update model" />

                <Button
                    android:id="@+id/resetModelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset model" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <Button
                    android:id="@+id/exitAppButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onExitButtonClick"
                    android:text="Exit app" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

        </FrameLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>